# ==== GreenDelivery Flip Sprint (.env.example) ====
# Replace placeholders and rename this file to .env before running.

# Postgres
POSTGRES_USER=greendelivery
POSTGRES_PASSWORD=greendelivery_pwd
POSTGRES_DB=greendelivery
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# MQTT broker
MQTT_BROKER_HOST=mosquitto
MQTT_BROKER_PORT=1883
MQTT_USERNAME=guest
MQTT_PASSWORD=guest
MQTT_TOPIC_PREFIX=telem

# Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/REPLACE/ME
ALERT_THROTTLE_SECONDS=60
TEMP_THRESHOLD_C=8.0
GFORCE_THRESHOLD=2.5
CONSECUTIVE_VIOLATIONS=3
